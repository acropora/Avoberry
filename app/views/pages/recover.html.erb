<h3>Identify Your Account</h3>
<p>Please fill in the following information to verify your account</p>
<%= form_tag reset_users_path, :method => 'post' do %>
	<p>
	<%= label_tag :email %>
	<%= text_field_tag :email, nil, :placeholder => 'a@b.com' %>
	</p>
	<p>
	<%= label_tag :name %>
	<%= text_field_tag :name, nil, :placeholder => 'John Smith' %>
	</p>
	<p>
	<%= submit_tag 'Reset password' %>
	</p>
<% end %>
		