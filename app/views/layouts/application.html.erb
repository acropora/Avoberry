<!DOCTYPE html>
<html>
	<head>
  		<title><%= title %></title>
  		<%= stylesheet_link_tag :all %>
  		<%= javascript_include_tag :defaults %>
  		<%= csrf_meta_tag %>
	</head>
	<body>
		<header>
		<%= render 'layouts/header' %>
		</header>
		<section>
			<% flash.each do |key, value| %>
				<%= value %>
			<% end %>
			<%= yield %>
		</section>
		<footer>
			<%= render 'layouts/footer' %>
		</footer>
		<%= debug(params) if Rails.env.development? %>
	</body>
</html>
